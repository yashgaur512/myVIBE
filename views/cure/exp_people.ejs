<% layout("layouts/boilerplate") %>

<h1 class=" p-5 heading"><center>PEOPLE SHARING THEIR EXPERIENCES</h1></center>
<div class="container"><a class="btn btn-lg btn-danger" href="/dashboard/cure">BACK</a></div>
<div class="container allposts">
  <% for(let experience of allExperiences){ %>
  <br /><br />
  <div class="card mb-5 allpostPost">
    <div class="card-body" style="height: 18rem;">
      <h5 class="card-title justify-content-center text-center p-4 m-4"><%= experience.title%> BY <sub><%= experience.username %></sub> </h5>
      <p style="font-size: 1.5rem;" class="card-text"><%= experience.experience %> </p>
      <a href="https://www.google.com/intl/en-GB/gmail/about/#" class="card-link "><%= experience.email %> </a>
    </div>
  </div>

  <% } %> 
</div>


