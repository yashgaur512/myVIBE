  <!-- Features -->

  <section class="white-section" id="features">
    <div class="row adv-row container-fluid">
      <div class="col-lg-4 adv">
        <i class="fas fa-heart fa-5x"></i>
        <h3 class="feature-heading">Seek help.</h3>
        <p class="adv">Seek help easily on particular aspects of your life.</p>

      </div>
